<h1>Sales form</h1>
<ul>
<%= form_with(model: @sale, local: true) do |f| %>

 <li>
 	<%= f.label :Sale_code %> 
 	<%= f.number_field :cod %>
 </li>
 <li>
 	<%= f.label :Sale_detail %>
 	<%= f.text_area :detail %>
 </li>
 <li>
 	<%= f.label :Category %>
 	<%= f.text_field :category %>
 </li>
 <li>
 	<%= f.label :Value %>
 	<%= f.number_field :value %>
 </li>
 <li>
 	<%= f.label :discount %>
 	<%= f.text_field :discount %>
 </li>
 <li>
 	<%= f.label :tax %>
 	<%= f.number_field :tax %>
 	<%= f.label :excento_de_iva %>
 	<%= f.check_box :tax %>
 </li>
 <li>
  <%= f.label :total %>
  <%= f.text_field :total %>
</li>
</ul>
 <%= f.submit :create %>
 <% end %>